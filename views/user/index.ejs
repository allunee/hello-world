<% include ../layout/betop %>

        <div class="row" >
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <form id="userinfoForm" class="form-horizontal form-label-left" novalidate>
                                <span class="section">Personal Info</span>
                                <div class="item form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >
                                            Sponsor
                                        </label>
                                        <div class="col-md-8 col-sm-6 col-xs-12">
                                            <input class="form-control col-md-7 col-xs-12" disabled="disabled" type="text" value="{{info.sponsor}}" />
                                        </div>
                                    </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" >
                                        UserName
                                    </label>
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <input class="form-control col-md-7 col-xs-12" disabled="disabled" type="text" value="{{info.username}}" />
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                        Email
                                    </label>
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <input type="email" disabled="disabled" class="form-control col-md-7 col-xs-12" value="{{info.email}}" />
                                    </div>
                                </div>
                                <!-- <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">
                                        Full Name
                                    </label>
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <input type="text" name="fullname" class="form-control col-md-7 col-xs-12">
                                    </div>
                                </div> -->
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="number">
                                        Phone
                                    </label>
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <input type="text"name="phonenumber" class="form-control col-md-7 col-xs-12" value="{{info.phone}}" />
                                    </div>
                                </div>
            
                                <div class="item form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Date Joined</label>
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        {{info.datecreate}}
                                    </div>
                                </div>
            
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-8 col-md-offset-3">
                                        <button type="submit" class="btn btn-primary">Cancel</button>
                                        <button id="send" type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            
                <div class="col-md-6 col-sm-12 col-xs-12">
                    <div class="x_panel">
                        <div class="x_content">
                            <form id="changePasswordForm" method="POST"  class="form-horizontal form-label-left" >
                                    
                                <span class="section">Change Password</span>
                                <div class="item form-group">
                                        <div class="reg-error error" style="color :red;">
                                            </div>
                                </div>
                                
                                <div class="item form-group">
                                    <label class="control-label col-md-5 col-sm-5 col-xs-12" >
                                        Old Password
                                    </label>
                                    <div class="col-md-7 col-sm-6 col-xs-12">
                                        <input type="password" name="OldPassword"  class="form-control col-md-7 col-xs-12">
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-5 col-sm-5 col-xs-12" >
                                        New Password
                                    </label>
                                    <div class="col-md-7 col-sm-6 col-xs-12">
                                        <input type="password" name="NewPassword" class="form-control col-md-7 col-xs-12">
                                    </div>
                                </div>
                                <div class="item form-group">
                                    <label class="control-label col-md-5 col-sm-5 col-xs-12" >
                                        Confirm New Pasword
                                    </label>
                                    <div class="col-md-7 col-sm-6 col-xs-12">
                                        <input type="password" name="ConfirmPassword"  class="form-control col-md-7 col-xs-12">
                                    </div>
                                </div>
            
                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-8 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary">Cancel</button>
                                        <button type="submit" class="btn btn-success">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            
            </div>

<% include ../layout/bebottom %>