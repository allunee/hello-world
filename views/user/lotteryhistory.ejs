</div>
<script>
        function LoadUserBet(page){
                $.ajax({
                        type: "GET",
                        url: '/user/lotteryhistoryresult',
                        data: {
                                page : page
                        }, // serializes the form's elements.
                        success: function(data)
                        {
                                $(".kqxscontent").append(data); // show response from the php script.
                                page ++;
                                $("#page").val(page);
                        }
                });
        }
        $(document).ready(function(){
                $(".xemkq").click(function(){
                     var page = parseInt($("#page").val());
                     LoadUserBet(page);   
                })
                
        });
</script>
