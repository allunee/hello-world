<link href="/css/timeline.css" rel="stylesheet"/>
<div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel" style="padding-bottom: 0px;">
    
                <div class="x_content" style="padding-bottom: 0px;">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="alert alert-success alert-dismissible fade in" role="alert">
                            <h4>BTC Wallet</h4>
                            <strong ng-bind="info.btcAmount">0</strong>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="alert alert-success alert-dismissible fade in" role="alert">
                            <h4>VNC Wallet</h4>
                            <strong ng-bind="info.vncAmount">0</strong>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="alert alert-info alert-dismissible fade in" role="alert">
                            <h4>VNC ICO Remaining</h4>
                            <strong >0</strong>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="alert alert-info alert-dismissible fade in" role="alert">
                            <h4>VNC ICO Sold</h4>
                            <strong></strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
    
            <div class="demnguoc">
                <div>
                    <h1 class="clOrange" style="font-family: fantasy; text-shadow: 1px 1px #fff;">
                        ICO Buy Time : 2017-12-15
                    </h1>
                </div>
    
                <div id="countdown" class="col-md-12">
                    <div id='tiles'></div>
                    <div class="labels">
                        <li>Days</li>
                        <li>Hours</li>
                        <li>Mins</li>
                        <li>Secs</li>
                    </div>
                </div>
            </div>
            <script src="/js/countdown.js"></script>
        </div>
        <div class="col-md-6" style="margin: 0px auto;">
            <div class="x_panel">
                <div class="x_content">
                    <form method="post" id="buyIcoForm" class="form-horizontal form-label-left">
                        <div class="item form-group">
                            <label>Maximun VNC amount per purchase : 100 VNC </label> <a> ( ALL )</a>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                BTC Amount :
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="text" name="btcAmount" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                VNC Amount :
                            </label>
                            <div class="col-md-8 col-sm-8 col-xs-12">
                                <input type="text" name="vncAmount" class="form-control col-md-7 col-xs-12">
                            </div>
                        </div>
    
                        <div class="form-group " style="margin-top: 15px;">
                            <script src='https://www.google.com/recaptcha/api.js'></script>
                            <div class="g-recaptcha" data-sitekey=""></div>
                        </div>
    
                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-3">
                                <button type="reset" class="btn btn-primary">Cancel</button>
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
    
                    </form>
                </div>
            </div>
            
    
        </div>
    </div>

